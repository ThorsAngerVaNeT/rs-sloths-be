// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String
  avatar_url    String?
  github        String    @unique
  createdAt     DateTime  @default(now())
  role          Role      @default(USER)
  todaySloth    TodayUserSloth?
}

enum Role {
  ADMIN
  USER
}

model TodayUserSloth {
  id            String      @id @default(uuid()) @db.Uuid
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String      @db.Uuid @unique
  slothId       String      @db.Uuid
  updatedAt     DateTime    @updatedAt
}

model Sloth {
  id            String              @id @default(uuid()) @db.Uuid
  caption       String
  description   String
  image_url     String
  rating        Float               @default(0)
  ratings       SlothUserRating[]
  createdAt     DateTime            @default(now())
  tags          Tag[]
}

model SlothUserRating {
  id            String    @id @default(uuid())
  sloth         Sloth     @relation(fields: [slothId], references: [id], onDelete: Cascade)
  slothId       String    @db.Uuid
  userId        String    @db.Uuid
  rate          Float     @default(0)
  createdAt     DateTime  @default(now())

  @@unique([slothId, userId], name: "SlothUser")
}

model Tag {  
  sloth     Sloth     @relation(fields: [slothId], references: [id], onDelete: Cascade)
  slothId   String    @db.Uuid
  value     String

  @@unique([slothId, value], name: "SlothTag")
}
